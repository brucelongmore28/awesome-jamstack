{
  "name": "jamstackdotorg",
  "version": "2.0.1",
  "description": "Home page for the JAMstack community",
  "author": "Phil Hawksworth",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamstack/jamstack.org"
  },
  "scripts": {
    "build": "npm run build:css & npm run build:html",
    "build:css": "postcss src/css/tailwind.css -o dist/css/styles.css",
    "build:html": "eleventy",
    "watch:css": "postcss src/css/tailwind.css -o dist/css/styles.css --watch",
    "watch:html": "eleventy --watch",
    "watch": "npm run watch:css & npm run watch:html",
    "serve": "live-server dist",
    "start": "npm run watch & npm run serve"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.9.0",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "autoprefixer": "^9.7.2",
    "cssnano": "^4.1.10",
    "luxon": "^1.21.2",
    "postcss-cli": "^6.1.3",
    "tailwindcss": "^1.1.4"
  },
  "devDependencies": {
    "live-server": "^1.2.1"
  }
}
