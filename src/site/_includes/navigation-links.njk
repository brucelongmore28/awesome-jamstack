  <ul class="inline-block pb-6">
  {% for link in linkList %}
    <li class="block py-2 mr-4 md:inline md:ml-6 md:mr-0">
      <a href="{{ link.url }}"
        class="font-bold p-1 {% if page.url.split("/")[1] == link.url.split("/")[1] %} bg-pink-900 text-white hover:text-white {% else %}hover:text-pink-900 {% endif %}  ">
        {{ link.text }}
      </a>
    </li>
  {% endfor %}
  </ul>
